<Application x:Class="BookTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookTracker"
             xmlns:conv="clr-namespace:BookTracker.Converts"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Кольори -->
        <Color x:Key="PrimaryColor">#4A90E2</Color>
        <Color x:Key="BackgroundColor">#F9F9F9</Color>
        <Color x:Key="TextColor">#2C2C2C</Color>
        <Color x:Key="SidebarColor">#F2F2F2</Color>
        <Color x:Key="SecondaryColor">#FFB200</Color>
        <Color x:Key="InfoColor">#2D9CDB</Color>
        <Color x:Key="ErrorColor">#EB5757</Color>
        <Color x:Key="SuccessColor">#27AE60</Color>

        <!-- Пензлі -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
        <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
        <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />

        <!-- Базові стилі для кнопок -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для заголовків -->
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

    </Application.Resources>
</Application>
